<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="cah.myapplication.app.GameSetup">

    <NumberPicker
        android:id = "@+id/numberPicker1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/pointToWin"></NumberPicker>
    <NumberPicker
        android:id = "@+id/numberPicker2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/numberPicker1"
        android:layout_alignStart="@+id/numberPicker1" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Number of Players"
        android:id="@+id/numPlayers"
        android:layout_alignBottom="@+id/numberPicker1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Points Needed to Win"
        android:id="@+id/pointToWin"
        android:layout_marginTop="51dp"
        android:layout_alignTop="@+id/numberPicker2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Game"
        android:id="@+id/btnPlayGame"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/numPlayers"
        android:layout_marginBottom="63dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To Menu"
        android:id="@+id/btnToMenu"
        android:layout_alignTop="@+id/btnPlayGame"
        android:layout_toLeftOf="@+id/btnPlayGame"
        android:layout_marginRight="32dp" />

</RelativeLayout>
